{
  "main": "./src/build.js",
  "scripts": {
    "postinstall": "npm run copy-assets",
    "start": "npm run scss-build-uncompressed && npm run dev",
    "build": "node ./src/cleanPublic.js && npm run scss-build-compressed && npm run build:rollup && npm run build:html",
    "build:rollup": "rollup -c",
    "build:html": "node ./src/build.js",
    "dev": "rollup  -c -w --no-watch.clearScreen",
    "serve": "node ./src/cleanPublic.js && npm run build:rollup && NODE_ENV=production node ./src/server.js",
    "esbuild": "node esbuild",
    "eslint": "eslint --ext .js .",
    "eslint:fix": "eslint --fix --ext .js .",
    "prettier:svelte": "prettier --write --plugin-search-dir=. ./**/*.svelte",
    "scss-build-compressed": "node-sass ./src/styles/style.scss ./assets/style.css --output-style compressed && node-sass ./src/styles/prism.scss ./assets/prism.css --output-style compressed",
    "scss-build-uncompressed": "node-sass ./src/styles/style.scss ./assets/style.css && node-sass ./src/styles/prism.scss ./assets/prism.css --output-style",
    "scss-watch": "node-sass ./styles/style.scss ./assets/style.css --watch --recursive",
    "upgrade-npms": "ncu --upgrade && npm install",
    "copy-assets": "node ./src/copy-assets.js"
  },
  "type": "commonjs",
  "engines": {
    "node": ">= 12.0.0"
  },
  "dependencies": {
    "@elderjs/elderjs": "^1.5.5",
    "@elderjs/plugin-browser-reload": "^1.1.6",
    "@elderjs/plugin-markdown": "^1.1.6",
    "@elderjs/plugin-seo-check": "1.1.6",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "del": "^6.0.0",
    "dotenv": "^10.0.0",
    "fs-extra": "^10.0.0",
    "glob": "^7.1.7",
    "intersection-observer": "^0.12.0",
    "polka": "^0.5.2",
    "sirv": "^1.0.12",
    "svelte": "^3.38.3",
    "svelte-preprocess": "^4.7.4"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/runtime": "^7.14.6",
    "@popperjs/core": "^2.9.2",
    "autoprefixer": "^10.3.1",
    "bootstrap": "^5.0.2",
    "eslint": "^7.30.0",
    "javascript-time-ago": "^2.3.8",
    "nodemon": "^2.0.12",
    "postcss": "^8.3.5",
    "remark-footnotes": "^3.0.0",
    "remark-gfm": "^1.0.0",
    "rollup": "^2.53.1",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.35.2",
    "prismjs": "^1.24.1"
  }
}
